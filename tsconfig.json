{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "src/__tests__/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}